{% include 'header.html.twig' %}

<h2>Recherche par Entreprise</h2>

<form method="GET" action="{{ path('app_search') }}" class="search-form">
    <input type="text" name="entreprise" class="search-input">
    <button type="submit">
        <span>Rechercher</span>
		<i></i>
    </button>
</form>

{% if entreprises is not empty %}
<div class="container">
    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Raison Sociale</th>
				<th>Adresse</th>
				<th>Code Postal</th>
				<th>Ville</th>
				<th>Pays</th>
				<th>Spécialité(s)</th>
				<th>Détails</th>
            </tr>
        </thead>
        <tbody>
            {% for entreprise in entreprises %}
                <tr>
                    <td>
                        {{ entreprise.nom }}
                    </td>
                    <td>
						{{ entreprise.rs }}
					</td>
					<td>
						{{ entreprise.adresse }}
					</td>
					<td>
						{{ entreprise.cp }}
					</td>
					<td>
						{{ entreprise.ville }}
					</td>
					<td>
						{{ entreprise.pays }}
					</td>
					<td>
						{{ entreprise.specialite }}
					</td>
					<td>
						<a href="{{ path('detailEntreprise', {'id' : entreprise.id}) }}">
							<img src="   https://cdn-icons-png.flaticon.com/512/7718/7718951.png " width="20" height="20" alt="" title="" class="img-small">
						</a>
					</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endif %}


<style>

.search-form {
    display: flex;
    justify-content: center;
}

.search-input {
    margin-right: 10px;
	box-shadow: rgba(0, 0, 0, 0.35) 0 0 15px;
}

h2 {
	font-size: 36px;
	color: #333;
    text-align: center;
	margin-bottom: 30px;
}

.container {
	margin: 20px auto;
	width: 90%;
}

th,
td {
	border: 1px solid #ddd;
	padding: 10px;
}

/* Style pour la section Container all */
.container table {
	width: 100%;
	border-collapse: collapse;
	border-spacing: 0;
	font-size: 14px;
}

.container th {
	background-color: #f5f5f5;
	border: 1px solid #ddd;
	padding: 8px;
	text-align: left;
	font-weight: 700;
	text-transform: uppercase;
}

.container td {
	border: 1px solid #ddd;
	padding: 8px;
}

.container td a {
	color: #333;
	text-decoration: none;
}

.container td a:hover {
	text-decoration: underline;
}

.container tbody tr:nth-child(even) {
	background-color: #f9f9f9;
}

.container tbody tr:hover {
	background-color: #e8f0fe;
}

/* BOUTON */

button {
	position: relative;
	background: white;
	color: white;
	text-decoration: none;
	font-weight: bold;
	border-radius: 30px;
	box-shadow: rgba(0, 0, 0, 0.35) 0 0 15px;
	text-transform: uppercase;
	border: none;
	letter-spacing: 0.1rem;
	font-size: 15px;
	padding: 0.5rem 1.5rem;
	transition: 0.2s;
}

button:hover {
	letter-spacing: 0.2rem;
	padding: 13px 18px;
	background: white;
	color: white;
	/* box-shadow: 0 0 35px var(--clr); */
	animation: box 3s infinite;
}

button::before {
	content: "";
	position: absolute;
	inset: 2px;
	background: #89898c;
	border-radius: 30px;

}

button span {
	position: relative;
	z-index: 1;
}
button i {
	position: absolute;
	inset: 0;
	display: block;
}

button i::before {
	content: "";
	position: absolute;
	width: 10px;
	height: 2px;
	left: 80%;
	top: -2px;
	border: 2px solid #fff;
	background: #fff;
	transition: 0.2s;
}

button:hover i::before {
	width: 15px;
	left: 20%;
	animation: move 3s infinite;
}

button i::after {
	content: "";
	position: absolute;
	width: 10px;
	height: 2px;
	left: 20%;
	bottom: -2px;
	border: 2px solid #fff;
	background: #fff;
	transition: 0.2s;
}

button:hover i::after {
	width: 15px;
	left: 80%;
	animation: move 3s infinite;
}

@keyframes move {
	0% {
		transform: translateX(0);
	}
	50% {
		transform: translateX(5px);
	}
	100% {
		transform: translateX(0);
	}
}

@keyframes box {
	0% {
		box-shadow: #fff;
	}
	50% {
		box-shadow: 0 0 25px #fff;
	}
	100% {
		box-shadow: red;
	}
}

</style>
