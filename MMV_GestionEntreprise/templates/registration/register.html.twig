{% extends 'base.html.twig' %}
{% block body %}
	<header>
		<div>
			<img class="logo" src='https://www.la-chataigneraie.org/wp-content/uploads/2022/02/campus-logo-1.png' height="120"/>
		</div>
		<h1 class="titre">Gestion des entreprises</h1>
	</header>

	<div class="login-form"></br>

	<div>
		<img class="logo-user" src='https://cdn-icons-png.flaticon.com/512/2734/2734847.png' height="120"/>
	</div>
	<h1 class="text-register">Création d'un compte</h1>

	<div class="content">
		<div class="input">
			{{ form_start(registrationForm) }}
			{{ form_row(registrationForm.login) }}
			{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
			<div class="checkbox"></br>
			{{ form_row(registrationForm.agreeTerms) }}
		</br>
		<button class="btn-resgister" type="submit">
			<span>Créer</span>
			<i></i>
		</button>
	</div>
	{{ form_end(registrationForm) }}
</div></div></div></br><style>input {
	font-size: 16px;
	display: block;
	font-family: 'Poppins', sans-serif;
	width: 100%;
	padding: 10px;
	border: 0;
	border-bottom: 2px solid #747474;
	outline: none;
	transition: all 0.2s;
}

.checkbox input[type="checkbox"] {
	display: none;
}

.checkbox label:before {
	content: "";
	display: inline-block;
	width: 15px;
	height: 15px;
	margin-right: 10px;
	border: 2px solid #89898C;
	border-radius: 5px;
}

.checkbox input[type="checkbox"]:checked + label:before {
	content: "\2713";
	color: white;
	text-align: center;
	line-height: 15px;
	background: #89898C;
	border: 2px solid #89898C;
	border-radius: 5px;
}


label,
h1 {
	font-family: 'Poppins', sans-serif;
}
.login-form {
	color: #36363B;
	background: #fff;
	width: 600px;
	height: 480px;
	margin: auto;
	display: -webkit-box;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	flex-direction: column;
	border-radius: 94px;
	box-shadow: 0 2px 25px rgba(0, 0, 0, 0.2);
}
.logo-user {
	display: block;
	color: #36363B;
	margin-left: auto;
	margin-right: auto;

}

.checkbox {
	text-align: center;
}

.text-register {
	display: block;
	color: #36363B;
	text-align: center;
	margin: 5px;
}

.login-form .content {
	padding: 25px 85px;
	text-align: left;
}

button {
	position: relative;
	background: white;
	color: white;
	text-decoration: none;
	font-weight: bold;
	border-radius: 30px;
	box-shadow: rgba(0, 0, 0, 0.35) 0 0 15px;
	text-transform: uppercase;
	border: none;
	letter-spacing: 0.1rem;
	font-size: 1rem;
	padding: 1rem 3rem;
	transition: 0.2s;
	margin-left: auto;
	margin-right: auto;

}

button:hover {
	letter-spacing: 0.2rem;
	padding: 1.1rem 3.1rem;
	background: white;
	color: white;
	/* box-shadow: 0 0 35px var(--clr); */
	animation: box 3s infinite;
}

button::before {
	content: "";
	position: absolute;
	inset: 2px;
	background: #89898c;
	border-radius: 30px;

}

button span {
	position: relative;
	z-index: 1;
}
button i {
	position: absolute;
	inset: 0;
	display: block;
}

button i::before {
	content: "";
	position: absolute;
	width: 10px;
	height: 2px;
	left: 80%;
	top: -2px;
	border: 2px solid #fff;
	background: #fff;
	transition: 0.2s;
}

button:hover i::before {
	width: 15px;
	left: 20%;
	animation: move 3s infinite;
}

button i::after {
	content: "";
	position: absolute;
	width: 10px;
	height: 2px;
	left: 20%;
	bottom: -2px;
	border: 2px solid #fff;
	background: #fff;
	transition: 0.2s;
}

button:hover i::after {
	width: 15px;
	left: 80%;
	animation: move 3s infinite;
}

@keyframes move {
	0% {
		transform: translateX(0);
	}
	50% {
		transform: translateX(5px);
	}
	100% {
		transform: translateX(0);
	}
}

@keyframes box {
	0% {
		box-shadow: #fff;
	}
	50% {
		box-shadow: 0 0 25px #fff;
	}
	100% {
		box-shadow: red;
	}
}
.titre {
	position: absolute;
	top: 5px;
	right: 5px;
	font-family: 'Poppins', sans-serif;
	color: #36363B;
}

.logo {
	display: inline-block;
	margin-bottom: 0;
	margin-left: 0;
}</style>{% endblock %}

